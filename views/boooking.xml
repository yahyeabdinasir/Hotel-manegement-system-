<odoo>
    <data>

        <record id="booking_tree" model="ir.ui.view">
            <field name="name">hotel.booking.tree</field>
            <field name="model">hotel.booking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="number"/>
                    <field name="check_in"/>
                    <field name="customer_id"/>
                    <field name="checkout"/>
                    <field name="total_days"/>
                    <field name="activity_ids" widget="list_activity"/>
                </tree>
            </field>
        </record>

        <record id="booking_form" model="ir.ui.view">
            <field name="name">hotel.booking.form</field>
            <field name="model">hotel.booking</field>
            <field name="arch" type="xml">
                <form>
                      <header>
                    <field name="state" widget="statusbar"/>
                     </header>
                    <sheet>


                        <group>
                            <group>
                                <field name="number"/>

                                <field name="customer_id"/>

                                <field name="guest_room"/>

                            </group>
                            <group>
                                <field name="check_in"/>
                                <field name="checkout"/>
                                <field name="total_days"/>

                            </group>


                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>


                </form>
            </field>
        </record>

        <record id="booking_action" model="ir.actions.act_window">
            <field name="name">Hotel Booking</field>
            <field name="res_model">hotel.booking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                name="Booking"
                id="Booking_menu"
                sequence="10"
                action="booking_action"
                parent="Hotel_main_menu"
        />


    </data>
</odoo>
