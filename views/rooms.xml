<odoo>
    <data>

        <record id="room_tree" model="ir.ui.view">
            <field name="name">room.tree</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="Number"/>
                    <field name="room_type"/>

                    <field name="Floor_Number"/>
                </tree>
            </field>
        </record>

        <record id="room_form" model="ir.ui.view">
            <field name="name">room.form</field>
            <field name="model">hotel.room</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h2 class="mr-6">
                                <field name="Number"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="room_type"/>
                                <field name="Number_bed"/>
                                <field name="price_night"/>


                            </group>
                            <group>
                                <field name="Room_Description"/>
                                <field name="Floor_Number"/>

                            </group>


                        </group>
                    </sheet>
                    <div class="oe_chatter">
<!--                        <field name="follower_ids"/>-->

                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="room_action" model="ir.actions.act_window">
            <field name="name">Hotel Rooms</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hotel.room</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
                name="Rooms"
                id="rooms_menu"
                sequence="2"
                action="room_action"
                parent="Hotel_main_menu"
        />


    </data>
</odoo>
